<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25px"
        android:paddingRight="25px"
        android:paddingTop="15px"
        android:paddingBottom="15px"
        >

        <ImageView
            android:id="@+id/iconView"
            android:layout_width="170px"
            android:layout_height="200px"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            />

        <RelativeLayout
            android:id="@+id/textContentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iconView"
            android:layout_marginLeft="20px">

            <TextView
                android:id="@+id/categoryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="#ff0099cc"
                android:textSize="18dp"
                android:textStyle="bold"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/itemNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/categoryTextView"
                android:layout_below="@+id/categoryTextView"
                android:layout_marginTop="5px"
                android:text="Name of the item"
                android:textColor="@android:color/black"
                android:textSize="16dp"/>

            <LinearLayout
                android:id="@+id/rankingLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/categoryTextView"
                android:layout_below="@+id/itemNameTextView"
                android:layout_marginTop="5px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rankingStaticTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ranking:"
                    android:textColor="#88000000"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/rankingValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/priceLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rankingLayout"
                android:layout_marginLeft="100px"
                android:layout_below="@+id/itemNameTextView"
                android:layout_marginTop="5px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/priceStaticTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price:"
                    android:textColor="#88000000"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/priceValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="16dp"/>

            </LinearLayout>




        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>