<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
    >

    <LinearLayout
        android:id="@+id/topBarLayout"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="#EDEDED"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/backArrowHeadView"
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_marginLeft="10px"
            android:background="@drawable/back_arrow_head"/>

        <ImageView
            android:id="@+id/uberLogoView"
            android:layout_width="110px"
            android:layout_height="110px"
            android:layout_marginLeft="10px"
            android:background="@drawable/uber_top_logo"/>

        <TextView
            android:id="@+id/registerHeadTexView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="Register"
            android:textColor="#AA000000"
            android:textSize="30dp"/>

    </LinearLayout>

    <View
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/topBarLayout"
        android:background="#33000000"
        />

    <LinearLayout
        android:id="@+id/nameEditorLayout"
        android:layout_width="940px"
        android:layout_height="160px"
        android:layout_below="@+id/div"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/fNameEditor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:hint="First Name"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:textColor="#000000"
            android:textColorHint="#88000000"
            android:textSize="24dp"
            />

        <EditText
            android:id="@+id/lNameEditor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_weight="0.5"
            android:hint="Last Name"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:textColor="#000000"
            android:textColorHint="#88000000"
            android:textSize="24dp"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/emailEditor"
        android:layout_width="940px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameEditorLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:hint="name@example.com"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:textColor="#000000"
        android:textColorHint="#88000000"
        android:textSize="24dp"
        />


    <LinearLayout
        android:id="@+id/mobileNumberLayout"
        android:layout_width="940px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailEditor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible"
        >

        <ImageView
            android:id="@+id/flagIconView"
            android:layout_width="128px"
            android:layout_height="128px"
            android:scaleType="centerInside">
        </ImageView>

        <View
            android:id="@+id/downArrow"
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_marginLeft="20px"
            android:background="@drawable/down_arrow_icon"
            />

        <TextView
            android:id="@+id/mobileCodeTexView"
            android:layout_width="140px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+92"
            android:textColor="#000000"
            android:textSize="24dp"
            />

        <EditText
            android:id="@+id/mobileNumberEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your mobile number"
            android:inputType="number"
            android:maxLines="2"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:textColor="#000000"
            android:textColorHint="#88000000"
            android:textSize="24dp"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/passwordEditor"
        android:layout_width="940px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobileNumberLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:textColor="#000000"
        android:textColorHint="#88000000"
        android:textSize="24dp"

        />

    <TextView
        android:id="@+id/cnicStaticTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordEditor"
        android:layout_below="@+id/passwordEditor"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:text="National Identity Card:"
        android:textColor="#88000000"
        android:textSize="24dp"/>

    <ImageView
        android:id="@+id/cnicPictureIconView"
        android:layout_width="900px"
        android:layout_height="150px"
        android:layout_below="@+id/cnicStaticTextView"
        android:layout_centerHorizontal="true"
        android:src="@drawable/take_pic_icon"
        android:scaleType="centerInside"
        />

    <TextView
        android:id="@+id/licenseStaticTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordEditor"
        android:layout_below="@+id/cnicPictureIconView"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:text="Driving license:"
        android:textColor="#88000000"
        android:textSize="24dp"/>

    <ImageView
        android:id="@+id/licenseIconView"
        android:layout_width="900px"
        android:layout_height="150px"
        android:layout_below="@+id/licenseStaticTextView"
        android:layout_centerHorizontal="true"
        android:src="@drawable/take_pic_icon"
        android:scaleType="centerInside"
        />

    <TextView
        android:id="@+id/errorCodeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/licenseIconView"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:text="Email is invalid"
        android:textColor="#FF0000"
        android:textSize="20dp"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="940px"
        android:layout_height="160px"
        android:layout_below="@+id/errorCodeTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:background="#ADADAD"
        android:text="NEXT"
        android:textColor="#EEFFFFFF"
        android:textSize="25dp"/>
</RelativeLayout>