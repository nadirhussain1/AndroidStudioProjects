<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/HistoryEditLayout"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <include
        layout="@layout/search_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/EditLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/edit_list_normal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/TopBg1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:src="@drawable/boder_left"/>

        <ImageView
            android:id="@+id/TopBg3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/top_bg_3"/>

        <RelativeLayout
            android:id="@+id/DeleteBar"
            android:layout_width="fill_parent"
            android:layout_height="42.899994dip"
            android:layout_toLeftOf="@id/TopBg3"
            android:layout_toRightOf="@id/TopBg1"
            android:background="@drawable/white_bg"
            android:descendantFocusability="blocksDescendants">

            <CheckBox
                android:id="@+id/CheckAllBox"
                style="@style/MyCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5.939972dip"
                android:clickable="false"/>

            <TextView
                android:id="@+id/edit_list_total_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13.859985dip"
                android:text="@string/delete_bar"
                android:textColor="@color/edit_total_select_color"
                android:textSize="16.0sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/edit_list_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/CheckAllBox"
                android:layout_toRightOf="@id/edit_list_total_name"
                android:text="(000)"
                android:textColor="@color/edit_total_select_color"
                android:textSize="16.0sp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <include
            android:id="@+id/ButtonView"
            layout="@layout/button_delete_cancel_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>

        <ListView
            android:id="@+id/CheckBoxList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/ButtonView"
            android:layout_below="@id/DeleteBar"
            android:layout_toLeftOf="@id/TopBg3"
            android:layout_toRightOf="@id/TopBg1"
            android:divider="@drawable/item_divider"
            android:dividerHeight="0.6600001dip"
            android:scrollingCache="false"/>

        <LinearLayout
            android:id="@+id/EditListLine"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="0.6600001dip"
            android:layout_below="@id/DeleteBar"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@id/TopBg3"
            android:layout_toRightOf="@id/TopBg1"
            android:background="#ffbec2d4"/>

        <ImageView
            android:id="@+id/ShadowItemIcon"
            android:layout_width="fill_parent"
            android:layout_height="3.9599915dip"
            android:layout_below="@id/EditListLine"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@id/TopBg3"
            android:layout_toRightOf="@id/TopBg1"
            android:scaleType="fitXY"
            android:src="@drawable/shadow"/>
    </RelativeLayout>
</LinearLayout>