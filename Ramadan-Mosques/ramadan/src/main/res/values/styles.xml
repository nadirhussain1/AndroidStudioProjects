<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light" />

    <style name="AppTheme" parent="@style/AppBaseTheme" />

    <style name="AppLTheme" parent="@style/AppTheme.Base" />

    <style name="AppTheme.Base" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="colorControlNormal">@color/theme</item>
        <item name="colorControlActivated">@color/theme</item>
        <item name="colorControlHighlight">@color/theme</item>
    </style>
    <style name="SplashTheme" parent="@style/Theme.AppCompat">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
<style name="AppTheme2" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="MyCustomToolBarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="actionMenuTextColor">@color/dark_white</item>
        <item name="android:actionMenuTextColor">@color/dark_white</item>
        <item name="android:selectableItemBackground">@null</item>
        <item name="android:actionBarItemBackground">@null</item>
        <item name="actionBarItemBackground">@null</item>
    </style>

    <style name="Widget.MyApp.HeaderBar.Spinner" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
    </style>

    <style name="MyDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">?android:selectableItemBackground</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FontStyle_Small">
        <item name="android:textSize">12.0sp</item>
    </style>

    <style name="FontStyle_Medium">
        <item name="android:textSize">15.0sp</item>
    </style>

    <style name="FontStyle_Large">
        <item name="android:textSize">18.0sp</item>
    </style>

    <style name="FontStyle_title_large">
        <item name="android:textSize">20.0sp</item>
    </style>

    <style name="FontStyle_title_medium">
        <item name="android:textSize">18.0sp</item>
    </style>

    <style name="FontStyle_title_small">
        <item name="android:textSize">15.0sp</item>
    </style>

    <style name="FontStyle_count_large">
        <item name="android:textSize">12.0sp</item>
    </style>

    <style name="FontStyle_count_medium">
        <item name="android:textSize">11.0sp</item>
    </style>

    <style name="FontStyle_count_small">
        <item name="android:textSize">10.0sp</item>
    </style>

    <style name="PreferencesTheme" parent="android:Theme">
        <item name="android:background">#FFDAB9</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>