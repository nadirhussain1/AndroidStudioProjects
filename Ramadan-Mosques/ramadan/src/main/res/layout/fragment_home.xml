<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layouthome"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical"
    android:weightSum="1.0" >

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_layout"
        android:layout_marginTop="20.0dip" >

        <TextView
            android:id="@+id/txt_location"
            style="@android:style/TextAppearance.Small"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/green"
            android:textSize="18.0sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_date"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lyt_location"
        android:layout_marginTop="5.0dip"
        android:gravity="center_horizontal"
        android:textColor="@color/green" />

    <ImageView
        android:id="@+id/alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_date"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10.0dip"
        android:src="@drawable/alarm_icon"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lyt_fasting_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ad_layout"
        android:layout_below="@+id/alarm"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_slider_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.45"
            android:src="@drawable/slider_previous" />

        <FrameLayout
            android:id="@+id/lyt_fasting_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45.0dip"
            android:layout_weight="0.05" >

            <ImageView
                android:id="@+id/img_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/menu_icon_margin_top_bottom"
                android:layout_marginTop="@dimen/menu_icon_margin_top_bottom"
                android:background="@drawable/ic_fasting_start" />

            <TextView
                android:id="@+id/title_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10.0dip"
                android:text="@string/suhoor"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/title_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10.0dip"
                android:lines="1"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/lyt_fasting_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="85.0dip"
            android:layout_weight="0.05" >

            <ImageView
                android:id="@+id/img_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/menu_icon_margin_top_bottom"
                android:layout_marginTop="@dimen/menu_icon_margin_top_bottom"
                android:background="@drawable/ic_fasting_end" />

            <TextView
                android:id="@+id/title_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10.0dip"
                android:lines="1"
                android:text="@string/iftar"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/title_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10.0dip"
                android:lines="1"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/lyt_fasting_mid_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="125.0dip"
            android:layout_weight="0.05" >

            <ImageView
                android:id="@+id/img_mid_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/menu_icon_margin_top_bottom"
                android:layout_marginTop="@dimen/menu_icon_margin_top_bottom"
                android:background="@drawable/ic_fasting_middle" />

            <TextView
                android:id="@+id/title_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10.0dip"
                android:text="@string/sehri"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/title_mid_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10.0dip"
                android:lines="1"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </FrameLayout>

        <ImageView
            android:id="@+id/img_slider_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.45"
            android:src="@drawable/slider_next" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.0dip" />

    <LinearLayout
        android:id="@+id/ad_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <include layout="@layout/ad_layout" />
    </LinearLayout>

</RelativeLayout>