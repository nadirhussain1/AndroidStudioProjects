<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:id="@+id/layoutcalendarfull" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@+id/top_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <include android:id="@+id/toolbar" layout="@layout/tool_bar" />
    </LinearLayout>
    <android.support.v4.view.ViewPager android:id="@+id/pager" android:background="@drawable/bg" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@+id/ad_layout" android:layout_below="@+id/top_layout" />
    <LinearLayout android:id="@+id/ad_layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <include layout="@layout/ad_layout" />
    </LinearLayout>
</RelativeLayout>