<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:background="@drawable/bg" android:layout_width="wrap_content" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@+id/top_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <include android:id="@+id/toolbar" layout="@layout/tool_bar" />
    </LinearLayout>
    <RadioGroup android:orientation="horizontal" android:id="@+id/radiogroupbox" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="5.0dip" android:layout_below="@+id/top_layout">
        <RadioButton android:typeface="serif" android:textColor="@color/green" android:id="@+id/fivekm" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5km" android:layout_weight="1.0" />
        <RadioButton android:typeface="serif" android:textColor="@color/green" android:id="@+id/tenkm" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10km" android:layout_weight="1.0" />
        <RadioButton android:typeface="serif" android:textColor="@color/green" android:id="@+id/fifteenkm" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="15km" android:layout_weight="1.0" />
        <RadioButton android:typeface="serif" android:textColor="@color/green" android:id="@+id/allkm" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="ALL" android:layout_weight="1.0" />
    </RadioGroup>
    <RelativeLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_above="@+id/ad_layout" android:layout_below="@+id/radiogroupbox">
        <TextView android:textStyle="bold" android:gravity="center" android:id="@+id/btn_show_map" android:background="@drawable/button_bg" android:paddingLeft="5.0dip" android:paddingRight="5.0dip" android:layout_width="wrap_content" android:layout_height="40.0dip" android:layout_marginTop="10.0dip" android:text="@string/show_places_onmap" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" />
        <ListView android:id="@+id/list" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@+id/btn_show_map" />
    </RelativeLayout>
    <LinearLayout android:id="@+id/ad_layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <include layout="@layout/ad_layout" />
    </LinearLayout>
</RelativeLayout>