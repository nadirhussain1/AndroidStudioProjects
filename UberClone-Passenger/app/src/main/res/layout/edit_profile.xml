<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/backButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="@android:color/black"
        >

        <ImageView
            android:layout_width="128px"
            android:layout_height="128px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:background="@drawable/white_back_arrow"/>

        <View
            android:id="@+id/backClickArea"
            android:layout_width="180px"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50px"
            android:layout_toRightOf="@+id/backClickArea"
            android:maxLines="1"
            android:text="Edit Account"
            android:textColor="@android:color/white"
            android:textSize="24dp"
            />


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/loadingBar"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backButtonLayout"
        android:layout_marginTop="-16px"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/contentsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/loadingBar">

        <RelativeLayout
            android:id="@+id/picLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50px"
            >

            <ImageView
                android:id="@+id/profileIconView"
                android:layout_width="196px"
                android:layout_height="196px"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/default_profile_icon"/>

            <ImageView
                android:id="@+id/editCirlceIconView"
                android:layout_width="96px"
                android:layout_height="96px"
                android:layout_alignRight="@+id/profileIconView"
                android:layout_below="@+id/profileIconView"
                android:layout_marginRight="150px"
                android:layout_marginTop="-50px"
                android:background="@drawable/edit_pencil_icon"
                />

        </RelativeLayout>

        <View
            android:id="@+id/div1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/picLayout"
            android:background="#22000000"
            android:tag="constantHeight"/>

        <LinearLayout
            android:id="@+id/nameEditorLayout"
            android:layout_width="940px"
            android:layout_height="160px"
            android:layout_below="@+id/div1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50px"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/fNameEditor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="First Name"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:textColor="#000000"
                android:textColorHint="#88000000"
                android:textSize="24dp"
                />

            <EditText
                android:id="@+id/lNameEditor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_weight="0.5"
                android:hint="Last Name"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:textColor="#000000"
                android:textColorHint="#88000000"
                android:textSize="24dp"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/emailEditor"
            android:layout_width="940px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameEditorLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50px"
            android:hint="name@example.com"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:textColor="#000000"
            android:textColorHint="#88000000"
            android:textSize="24dp"
            />


        <LinearLayout
            android:id="@+id/mobileNumberLayout"
            android:layout_width="940px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailEditor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible"
            >

            <ImageView
                android:id="@+id/flagIconView"
                android:layout_width="128px"
                android:layout_height="128px"
                android:scaleType="centerInside">
            </ImageView>

            <View
                android:id="@+id/downArrow"
                android:layout_width="72px"
                android:layout_height="72px"
                android:layout_marginLeft="20px"
                android:background="@drawable/down_arrow_icon"
                />

            <TextView
                android:id="@+id/mobileCodeTexView"
                android:layout_width="140px"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="+92"
                android:textColor="#000000"
                android:textSize="24dp"
                />

            <EditText
                android:id="@+id/mobileNumberEditor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your mobile number"
                android:inputType="number"
                android:maxLines="2"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:textColor="#000000"
                android:textColorHint="#88000000"
                android:textSize="24dp"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/passwordEditor"
            android:layout_width="940px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobileNumberLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50px"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:textColor="#000000"
            android:textColorHint="#88000000"
            android:textSize="24dp"

            />

        <TextView
            android:id="@+id/errorCodeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordEditor"
            android:layout_marginTop="80px"
            android:gravity="center"
            android:text="Email is invalid"
            android:textColor="#FF0000"
            android:textSize="20dp"
            android:visibility="invisible"
            />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="940px"
            android:layout_height="160px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50px"
            android:background="@android:color/black"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textSize="25dp"/>
    </RelativeLayout>

</RelativeLayout>