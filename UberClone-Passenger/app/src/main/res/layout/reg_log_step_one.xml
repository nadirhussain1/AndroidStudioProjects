<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000011">

        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="940px"
            android:layout_height="160px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100px"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/signInButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="SIGN IN"
                android:textColor="#AA000000"
                android:textSize="20dp"
                android:textStyle="bold"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#AA000000"
                android:tag="constantWidth"
                />

            <TextView
                android:id="@+id/registerButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="REGISTER"
                android:textColor="#AA000000"
                android:textSize="20dp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="300px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/uberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="U B E R"
                android:textColor="#AAFFFFFF"
                android:textSize="28dp"
                />
            <TextView
                android:id="@+id/everyoneTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:text="EVERYONE\'S PRIVATE DRIVER"
                android:textColor="#66FFFFFF"
                android:textSize="22dp"
                />


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>