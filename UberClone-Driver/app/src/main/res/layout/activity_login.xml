<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black">

    <TextView
        android:id="@+id/uberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px"
        android:text="U B E R"
        android:textColor="#DDFFFFFF"
        android:textSize="35dp"
        />

    <LinearLayout
        android:id="@+id/signInLayout"
        android:layout_width="940px"
        android:layout_height="100px"
        android:layout_below="@+id/uberTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.5"
            android:background="#55FFFFFF"
            />

        <TextView
            android:id="@+id/everyoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:text="Sign In"
            android:textColor="#AAFFFFFF"
            android:textSize="22dp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.5"
            android:background="#55FFFFFF"
            android:tag="constantHeight"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputLayout"
        android:layout_width="940px"
        android:layout_height="320px"
        android:layout_below="@+id/signInLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60px"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <EditText
            android:id="@+id/emailEditor"
            android:layout_width="940px"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:textColor="#000000"
            android:textColorHint="#88000000"
            android:textSize="24dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#66000000"
            android:tag="constantHeight"
            />

        <EditText
            android:id="@+id/passwordEditor"
            android:layout_width="940px"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:textColor="#000000"
            android:textColorHint="#88000000"
            android:textSize="24dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/forgotLayout"
        android:layout_width="940px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/remCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/rememberMeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember Me ."
            android:textColor="#AAFFFFFF"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/forgotPassTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="Forgot Password"
            android:textColor="#00BBD8"
            android:textSize="20dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/errorCodeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgotLayout"
        android:layout_marginTop="50px"
        android:gravity="center"
        android:text="Email is invalid"
        android:textColor="#FF0000"
        android:textSize="20dp"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/signInButton"
        android:layout_width="940px"
        android:layout_height="160px"
        android:layout_below="@+id/errorCodeTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:background="#00A8C3"
        android:text="SIGN IN"
        android:textColor="#EEFFFFFF"
        android:textSize="25dp"/>

    <View
        android:id="@+id/bottomDiv"
        android:layout_width="940px"
        android:layout_height="1dp"
        android:layout_below="@+id/signInButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60px"
        android:background="#55FFFFFF"
        />

    <LinearLayout
        android:id="@+id/newAccountLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottomDiv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dontHaveAccountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textColor="#AAFFFFFF"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/signUpTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="Sign Up"
            android:textColor="#00BBD8"
            android:textSize="20dp"
            />
    </LinearLayout>


</RelativeLayout>