<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:background="@android:color/black">

        <LinearLayout
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="50px"
            android:paddingLeft="100px"
            android:paddingTop="50px"
            >

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="172px"
                android:layout_height="172px"
                android:src="@drawable/default_profile_icon"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/profileNameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:text="NADIR Hussain"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <View
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/profileLayout"
            android:layout_marginTop="10px"
            android:background="#CCFFFFFF"
            android:tag="constantHeight"
            />

        <LinearLayout
            android:id="@+id/businesslayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/div"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="100px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you Valet for business?"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to create your business profile"
                android:textColor="#CCFFFFFF"
                android:textSize="18dp"

                />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>