<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F1F1F">

    <RelativeLayout
        android:id="@+id/scalingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1F1F1F">

        <com.connectivityapps.bubble.LevelView
            android:id="@+id/level"
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/displayTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Angle"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="10dp"

            />

        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >

            <Button
                android:id="@+id/lockValuesButton"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:background="#4A494A"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="@string/lock_value_text"
                android:layout_height="match_parent" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#1F1F1F"

                />
            <Button
                android:id="@+id/caliberateButton"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:background="#4A494A"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="@string/calibrate_button_text"
                android:layout_height="match_parent" />

            </LinearLayout>
    </RelativeLayout>
</RelativeLayout>