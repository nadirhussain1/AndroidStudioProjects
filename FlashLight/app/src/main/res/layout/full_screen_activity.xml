<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/scalingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFAA"
        >

        <RelativeLayout
            android:id="@+id/colorLayout"
            android:layout_width="900px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fullScreenLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1480px">

            <ImageView
                android:id="@+id/colorWheelView"
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_color_wheel" />

            <SeekBar
                android:id="@+id/colorChangeSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/colorWheelView"
                android:thumbOffset="0dp"
                android:progressDrawable="@drawable/colorbar_indicator_bg"
                android:thumb="@drawable/colorbar_indicator" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/handTouchImageView"
            android:layout_width="540px"
            android:layout_height="540px"
            android:layout_centerInParent="true"

            android:background="@drawable/hand_touc_selector"
            />

    </RelativeLayout>

</RelativeLayout>