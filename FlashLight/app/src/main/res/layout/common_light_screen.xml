<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="1000px"
    android:background="#1F1F1F">


    <RelativeLayout
        android:id="@+id/batteryStatsLayout"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#292929">

        <ImageView
            android:id="@+id/batteryLevelIconView"
            android:layout_width="84px"
            android:layout_height="54px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50px"
            android:background="@drawable/battery_100" />

        <TextView
            android:id="@+id/batteryLevelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/batteryLevelIconView"
            android:text=""
            android:textColor="#CCCCCC"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/batteryTimeIconView"
            android:layout_width="84px"
            android:layout_height="54px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50px"
            android:visibility="gone"
            android:layout_toRightOf="@+id/batteryLevelTextView"
            android:background="@drawable/battery_left_time" />

        <TextView
            android:id="@+id/batteryTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:visibility="gone"
            android:layout_toRightOf="@+id/batteryTimeIconView"
            android:text="-00:14:56"
            android:textColor="#CCCCCC"
            android:textSize="16dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/soundPhotoLayout"
        android:layout_width="180px"
        android:layout_height="430px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50px"
        android:layout_marginTop="50px">

        <ImageView
            android:id="@+id/soundIconView"
            android:layout_width="180px"
            android:layout_height="180px"
            android:background="@drawable/sound_on_selector" />

        <ImageView
            android:id="@+id/photoCaptureView"
            android:layout_width="180px"
            android:layout_height="180px"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:background="@drawable/photo_button_selector" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/mainOnOffButton"
        android:layout_width="540px"
        android:layout_height="540px"
        android:layout_below="@+id/batteryStatsLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180px"
        android:background="@drawable/large_button_flashlight" />


    <TextView
        android:id="@+id/lightOffTimeLeftTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainOnOffButton"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10px"
        android:text=""
        android:textColor="#CCCCCC"
        android:textSize="40dp" />

</RelativeLayout>