<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#227CE0B2">

        <RelativeLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="30px"
            android:background="@drawable/dialog_custom_bg">


            <LinearLayout
                android:id="@+id/headLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="180px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hurrah!"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"
                    android:textStyle="bold"/>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/spinnersLayoutInfo"
                android:layout_width="900px"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="180px">

                <TextView
                    android:id="@+id/infoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:gravity="center_horizontal"
                    android:text="This match is over. Lets start a new match"
                    android:textColor="@android:color/black"
                    android:textSize="22dp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/newMatchButton"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:background="@drawable/custom_red_button_bg"
                android:gravity="center"
                android:text="New Match"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_margin="40px"
                />


            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40px"
                android:layout_marginTop="40px"
                android:background="@drawable/cross_red_icon"/>

            <ImageView
                android:id="@+id/crossIconClickView"
                android:layout_width="150px"
                android:layout_height="150px"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>