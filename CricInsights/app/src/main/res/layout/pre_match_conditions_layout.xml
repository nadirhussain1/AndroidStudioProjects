<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#7CE0B2"
                android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="30px"
        android:background="@drawable/dialog_custom_bg">

        <LinearLayout
            android:id="@+id/headLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/prematchTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pre-match"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/conditionsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="CONDITIONS"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/pitchConditionsLayout"
            android:layout_width="900px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180px">

            <TextView
                android:id="@+id/pitchHeadTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Pitch"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:id="@+id/humidityLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pitchHeadTextView"
                android:layout_marginTop="60px"
                >

                <TextView
                    android:id="@+id/humidityStaticLabelView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:textColor="@android:color/black"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    />

                <RadioGroup
                    android:id="@+id/humidityRadioGroupLayout"
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/dryRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Dry"
                        android:textColor="#66000000"
                        android:textSize="18dp"
                        />

                    <RadioButton
                        android:id="@+id/moistRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100px"
                        android:text="Moist"
                        android:textColor="#66000000"
                        android:textSize="18dp"
                        />

                </RadioGroup>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/grassPitchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/humidityLayout"
                android:layout_marginTop="40px">

                <TextView
                    android:id="@+id/grassStaticLabelView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Grass"
                    android:textColor="@android:color/black"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    />

                <Spinner
                    android:id="@+id/grassSpinner"
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/custom_spinner_rounded_bg"
                    android:entries="@array/grass_options"
                    android:clickable="true"
                    android:spinnerMode="dropdown">
                </Spinner>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hardnessLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/grassPitchLayout"
                android:layout_marginTop="40px">

                <TextView
                    android:id="@+id/hardnessStaticLabelView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Hardness"
                    android:textColor="@android:color/black"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    />

                <Spinner
                    android:id="@+id/hardnessSpinner"
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/custom_spinner_rounded_bg"
                    android:entries="@array/hardness_options"
                    android:spinnerMode="dropdown">
                </Spinner>

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/pitchConditionsLayout"
            android:layout_marginTop="60px"
            android:background="#44000000"
            android:tag="constantHeight"
            />

        <RelativeLayout
            android:id="@+id/weatherConditionsLayout"
            android:layout_width="900px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/div"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80px"
            >

            <TextView
                android:id="@+id/weatherHeadTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Weather"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:id="@+id/overallLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weatherHeadTextView"
                android:layout_marginTop="60px">

                <TextView
                    android:id="@+id/overallStaticLabelView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overall"
                    android:textColor="@android:color/black"
                    android:textSize="22dp"
                    android:textStyle="bold"/>

                <RadioGroup
                    android:id="@+id/overallRadioGroupLayout"
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/windyRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Windy"
                        android:textColor="#66000000"
                        android:textSize="18dp"
                        />

                    <RadioButton
                        android:id="@+id/moistWindyRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80px"
                        android:text="Moist"
                        android:textColor="#66000000"
                        android:textSize="18dp"
                        />

                </RadioGroup>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cloudsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/overallLayout"
                android:layout_marginTop="40px">

                <TextView
                    android:id="@+id/cludStaticLabelView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Clouds"
                    android:textColor="@android:color/black"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    />

                <Spinner
                    android:id="@+id/cloudySpinner"
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/custom_spinner_rounded_bg"
                    android:entries="@array/weather_options"
                    android:spinnerMode="dropdown">
                </Spinner>

            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/saveButton"
            android:layout_width="600px"
            android:layout_height="150px"
            android:layout_below="@+id/weatherConditionsLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150px"
            android:background="@drawable/custom_red_button_bg"
            android:gravity="center"
            android:text="Save"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:layout_marginTop="40px"
            android:background="@drawable/cross_red_icon"/>

        <ImageView
            android:id="@+id/crossIconClickView"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_alignParentRight="true"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10px"
            android:visibility="gone"/>

    </RelativeLayout>
</RelativeLayout>