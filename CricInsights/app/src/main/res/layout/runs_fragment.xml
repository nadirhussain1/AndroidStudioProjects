<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">


    <RelativeLayout
        android:id="@+id/statisticsTwoLayout"
        android:layout_width="wrap_content"
        android:layout_height="220px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100px">

        <RelativeLayout
            android:id="@+id/strikerLayout"
            android:layout_width="360px"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/playerOneSymbolLayout"
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_centerHorizontal="true"
                >

                <ImageView
                    android:id="@+id/batIconView"
                    android:layout_width="72px"
                    android:layout_height="72px"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bat_icon"/>

                <TextView
                    android:id="@+id/strikerNameView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/strikerGreenDotView"
                    android:layout_toRightOf="@+id/batIconView"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Muhammad Hafeezhello boy"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:id="@+id/strikerGreenDotView"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:background="@drawable/green_dot_bg"

                    />

            </RelativeLayout>

            <View
                android:id="@+id/hDiv"
                android:layout_width="300px"
                android:layout_height="1dp"
                android:layout_below="@+id/playerOneSymbolLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20px"
                android:background="#44000000"
                android:tag="constantHeight"
                />


            <TextView
                android:id="@+id/strikerStatsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hDiv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25px"
                android:text=" 30 (20)"
                android:textSize="18dp"
                />


        </RelativeLayout>

        <View
            android:id="@+id/div"
            android:layout_width="1dp"
            android:layout_height="100px"
            android:layout_toRightOf="@+id/strikerLayout"
            android:background="#44000000"
            android:tag="constantWidth"
            />

        <RelativeLayout
            android:id="@+id/nonStrikerLayout"
            android:layout_width="360px"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/div">

            <LinearLayout
                android:id="@+id/playerTwoSymbolLayout"
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="72px"
                    android:layout_height="72px"
                    android:background="@drawable/bat_icon"/>

                <TextView
                    android:id="@+id/nonStrikerNameView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Arsalan"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />


            </LinearLayout>


            <View
                android:id="@+id/hDiv2"
                android:layout_width="300px"
                android:layout_height="1dp"
                android:layout_below="@+id/playerTwoSymbolLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20px"
                android:background="#44000000"
                android:tag="constantHeight"
                />

            <TextView
                android:id="@+id/nonStrikerStatsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hDiv2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25px"
                android:text="40 (45)"
                android:textSize="18dp"
                />


        </RelativeLayout>

        <View
            android:id="@+id/div2"
            android:layout_width="1dp"
            android:layout_height="100px"
            android:layout_toRightOf="@id/nonStrikerLayout"
            android:background="#44000000"
            android:tag="constantWidth"
            />

        <RelativeLayout
            android:id="@+id/bowlerLayout"
            android:layout_width="360px"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/div2">

            <LinearLayout
                android:id="@+id/bowlerSymbolLayout"
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="84px"
                    android:layout_height="56px"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/ball_icon"/>

                <TextView
                    android:id="@+id/bowlerNameView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5px"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Anwar"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />


            </LinearLayout>


            <View
                android:id="@+id/hDiv3"
                android:layout_width="300px"
                android:layout_height="1dp"
                android:layout_below="@+id/bowlerSymbolLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20px"
                android:background="#44000000"
                android:tag="constantHeight"
                />

            <TextView
                android:id="@+id/ballOverView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hDiv3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25px"
                android:text="2.5"
                android:textSize="18dp"
                />


    </RelativeLayout>
</RelativeLayout>


<LinearLayout
android:id="@+id/extraslayout"
android:layout_width="wrap_content"
android:layout_height="120px"
android:layout_below="@+id/statisticsTwoLayout"
android:layout_centerHorizontal="true"
android:layout_marginTop="100px"
android:orientation="horizontal">

<TextView
    android:id="@+id/legByeButton"
    android:layout_width="225px"
    android:layout_height="match_parent"
    android:background="@drawable/extra_button_selector"
    android:gravity="center"
    android:text="LEG BYE"
    android:textColor="#AA000000"
    android:textSize="14dp"
    android:textStyle="bold"/>


<TextView
    android:id="@+id/ByeButton"
    android:layout_width="225px"
    android:layout_height="match_parent"
    android:layout_marginLeft="30px"
    android:background="@drawable/extra_button_selector"
    android:gravity="center"
    android:text="BYE"
    android:textColor="#AA000000"
    android:textSize="14dp"
    android:textStyle="bold"/>

<TextView
    android:id="@+id/wideButton"
    android:layout_width="225px"
    android:layout_height="match_parent"
    android:layout_marginLeft="30px"
    android:background="@drawable/extra_button_selector"
    android:gravity="center"
    android:text="WIDE"
    android:textColor="#AA000000"
    android:textSize="14dp"
    android:textStyle="bold"/>

<TextView
    android:id="@+id/NoBallButton"
    android:layout_width="225px"
    android:layout_height="match_parent"
    android:layout_marginLeft="30px"
    android:background="@drawable/extra_button_selector"
    android:gravity="center"
    android:text="NO BALL"
    android:textColor="#AA000000"
    android:textSize="14dp"
    android:textStyle="bold"/>

</LinearLayout>

<RelativeLayout
android:id="@+id/circleLayout"
android:layout_width="match_parent"
android:layout_height="350px"
android:layout_below="@+id/extraslayout"
android:layout_marginTop="100px">

<TextView
    android:id="@+id/threeBallTextView"
    android:layout_width="135px"
    android:layout_height="135px"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="10px"
    android:background="@drawable/bat_score_digit_selector"
    android:gravity="center"
    android:text="3"
    android:textColor="@android:color/white"
    android:textSize="30dp"
    android:textStyle="bold"
    />

<TextView
    android:id="@+id/twoBallTextView"
    android:layout_width="135px"
    android:layout_height="135px"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="100px"
    android:layout_marginLeft="5px"
    android:layout_toRightOf="@+id/threeBallTextView"
    android:background="@drawable/bat_score_digit_selector"
    android:gravity="center"
    android:text="2"
    android:textColor="@android:color/white"
    android:textSize="30dp"
    android:textStyle="bold"
    />

<TextView
    android:id="@+id/oneBallTextView"
    android:layout_width="135px"
    android:layout_height="135px"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="170px"
    android:layout_marginLeft="8px"
    android:layout_toRightOf="@+id/twoBallTextView"
    android:background="@drawable/bat_score_digit_selector"
    android:gravity="center"
    android:text="1"
    android:textColor="@android:color/white"
    android:textSize="30dp"
    android:textStyle="bold"
    />

<TextView
    android:id="@+id/dotBallTextView"
    android:layout_width="200px"
    android:layout_height="200px"
    android:layout_centerHorizontal="true"
    android:background="@drawable/bat_score_digit_selector"
    android:gravity="center"
    android:text="0"
    android:textColor="@android:color/white"
    android:textSize="40dp"
    android:textStyle="bold"
    />

<TextView
    android:id="@+id/fourBallTextView"
    android:layout_width="135px"
    android:layout_height="135px"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="170px"
    android:layout_marginRight="8px"
    android:layout_toLeftOf="@+id/sixBallTextView"
    android:background="@drawable/bat_score_digit_selector"
    android:gravity="center"
    android:text="4"
    android:textColor="@android:color/white"
    android:textSize="30dp"
    android:textStyle="bold"
    />

<TextView
    android:id="@+id/sixBallTextView"
    android:layout_width="135px"
    android:layout_height="135px"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="100px"
    android:layout_marginRight="5px"
    android:layout_toLeftOf="@+id/fiveBallTextView"
    android:background="@drawable/bat_score_digit_selector"
    android:gravity="center"
    android:text="6"
    android:textColor="@android:color/white"
    android:textSize="30dp"
    android:textStyle="bold"
    />

<TextView
    android:id="@+id/fiveBallTextView"
    android:layout_width="135px"
    android:layout_height="135px"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_marginRight="10px"
    android:background="@drawable/extra_score_digit_selector"
    android:gravity="center"
    android:text="5"
    android:textColor="@android:color/holo_red_dark"
    android:textSize="30dp"
    android:textStyle="bold"
    />


</RelativeLayout>

<LinearLayout
android:id="@+id/wicketLayout"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/circleLayout"
android:layout_centerHorizontal="true"
android:layout_marginTop="-50px"
android:gravity="center_horizontal"
android:orientation="vertical"
    >

<TextView
    android:id="@+id/wicketButton"
    android:layout_width="250px"
    android:layout_height="250px"
    android:background="@drawable/wicket_bg_selector"
    />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10px"
    android:text="WICKET"
    android:textColor="@android:color/black"
    android:textSize="14dp"
    android:textStyle="bold"/>

</LinearLayout>

<TextView
android:id="@+id/pitchNextView"
android:layout_width="550px"
android:layout_height="110px"
android:layout_alignParentBottom="true"
android:layout_alignParentRight="true"
android:background="#F0F1F2"
android:gravity="center"
android:text="PITCH"
android:textColor="@android:color/black"
android:textSize="18dp"
android:textStyle="bold"
android:visibility="gone"
    />

    </RelativeLayout>