<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/costLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="50px"
        android:paddingRight="50px"
        >


        <TextView
            android:id="@+id/ItemCostTextView"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:text="Item cost"
            android:textColor="#000000"
            android:textSize="16dp"
            />


        <EditText
            android:id="@+id/costEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:text="3.50"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/inboundShippingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/costLayout"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="50px"
        android:paddingRight="50px">


        <TextView
            android:id="@+id/inboundShippingTextView"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:text="Inbound shipping"
            android:textColor="#000000"
            android:textSize="16dp"/>


        <EditText
            android:id="@+id/inboundShippingEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:text="1.00"
            android:textColor="@android:color/black"
            android:textSize="20dp"/>


    </LinearLayout>


    <Button
        android:id="@+id/saveButton"
        android:layout_width="600px"
        android:layout_height="100px"
        android:layout_below="@+id/inboundShippingLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75px"
        android:background="@drawable/standard_buttons_rounded_bg"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16dp"/>


</RelativeLayout>