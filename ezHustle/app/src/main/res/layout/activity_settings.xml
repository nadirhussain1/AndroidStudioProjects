<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/soundSettingsLayout"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"

        >

        <TextView
            android:id="@+id/soundStaticLable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Sound"
            android:textColor="@android:color/black"
            android:textSize="22dp"

            />

        <CheckBox
            android:id="@+id/soundCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#44000000"
            android:tag="constantHeight"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/offlineDbLayout"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px">

        <TextView
            android:id="@+id/offlineStaticLable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Offline DB"
            android:textColor="@android:color/black"
            android:textSize="22dp"

            />

        <CheckBox
            android:id="@+id/offlineDbCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#44000000"
            android:tag="constantHeight"
            />

    </RelativeLayout>


</LinearLayout>