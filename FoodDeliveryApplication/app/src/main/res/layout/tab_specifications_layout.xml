<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/productInfoHeadTextView"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:paddingLeft="50px"
            android:text="PRODUCT INFORMATION"
            android:textColor="@android:color/black"
            android:background="#11000000"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/colorInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_below="@+id/productInfoHeadTextView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50px"
                android:gravity="center_vertical"
                android:text="Colour"
                android:textColor="@android:color/black"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/colourTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="400px"
                android:gravity="center_vertical"
                android:text="N/A"
                android:textColor="#66000000"
                android:textSize="16dp"/>

        </RelativeLayout>
        <View
            android:id="@+id/divOne"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/colorInfoLayout"
            android:tag="constantHeight"
            android:background="#44000000"
            />
        <RelativeLayout
            android:id="@+id/materialInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_below="@+id/divOne">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50px"
                android:gravity="center_vertical"
                android:text="Main Material"
                android:textColor="@android:color/black"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/materialTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="400px"
                android:gravity="center_vertical"
                android:text="N/A"
                android:textColor="#66000000"
                android:textSize="16dp"/>

        </RelativeLayout>
        <View
            android:id="@+id/divTwo"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/materialInfoLayout"
            android:tag="constantHeight"
            android:background="#44000000"
            />
        <RelativeLayout
            android:id="@+id/warrantyInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_below="@+id/divTwo">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50px"
                android:gravity="center_vertical"
                android:text="Warranty"
                android:textColor="@android:color/black"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/warrantyTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="400px"
                android:gravity="center_vertical"
                android:text="N/A"
                android:textColor="#66000000"
                android:textSize="16dp"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/generalInfoHeadTextView"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_below="@+id/warrantyInfoLayout"
            android:gravity="center_vertical"
            android:paddingLeft="50px"
            android:text="GENERAL INFORMATION"
            android:textColor="@android:color/black"
            android:background="#11000000"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <RelativeLayout
            android:id="@+id/skuInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_below="@+id/generalInfoHeadTextView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50px"
                android:gravity="center_vertical"
                android:text="SKU"
                android:textColor="@android:color/black"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/skuTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="400px"
                android:gravity="center_vertical"
                android:text="N/A"
                android:textColor="#66000000"
                android:textSize="16dp"/>

        </RelativeLayout>

        <View
            android:id="@+id/divThree"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/skuInfoLayout"
            android:tag="constantHeight"
            android:background="#44000000"
            />

        <RelativeLayout
            android:id="@+id/brandInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_below="@+id/skuInfoLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50px"
                android:gravity="center_vertical"
                android:text="Brand"
                android:textColor="@android:color/black"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/brandTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="400px"
                android:gravity="center_vertical"
                android:text="N/A"
                android:textColor="#66000000"
                android:textSize="16dp"/>

        </RelativeLayout>
        <View
            android:id="@+id/divFour"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/brandInfoLayout"
            android:tag="constantHeight"
            android:background="#44000000"
            />
        <RelativeLayout
            android:id="@+id/weightInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_below="@+id/divFour">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50px"
                android:gravity="center_vertical"
                android:text="Shipping weight(kg)"
                android:textColor="@android:color/black"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/weightTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="400px"
                android:gravity="center_vertical"
                android:text="N/A"
                android:textColor="#66000000"
                android:textSize="16dp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>