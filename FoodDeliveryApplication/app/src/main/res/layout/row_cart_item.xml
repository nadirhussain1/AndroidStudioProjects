<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/gridItemLayout"
        android:layout_width="355px"
        android:layout_height="450px"
        android:background="#FFFFFF"
        android:padding="20px"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/gridItemIconView"
            android:layout_width="150px"
            android:layout_height="200px"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_red_dark"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/gridItemNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridItemIconView"
            android:layout_marginTop="30px"
            android:text="Liquid Protein"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/gridItemPriceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridItemNameView"
            android:text="Rs.200"
            android:textColor="#88000000"
            android:textSize="18dp"/>

        <ImageView
            android:id="@+id/gridTrashIconView"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/gridItemNameView"
            android:background="@drawable/trash_icon"/>

        <View
            android:id="@+id/gridTrashClickArea"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/gridItemNameView"/>

        <LinearLayout
            android:id="@+id/gridQuantityLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridItemPriceView"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/quantityLabelView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textColor="#88000000"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/gridQuantityEditor"
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:background="@drawable/bottom_border_editor_bg"
                android:gravity="center"
                android:text="4"
                android:textColor="@android:color/black"
                android:textSize="20dp"/>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/listItemLayout"
        android:layout_width="match_parent"
        android:layout_height="280px"
        android:background="#FFFFFF"
        android:padding="30px"
        android:visibility="visible">

        <ImageView
            android:id="@+id/listItemIconView"
            android:layout_width="150px"
            android:layout_height="200px"
            android:background="@android:color/holo_red_dark"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/listItemNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginTop="10px"
            android:layout_toRightOf="@+id/listItemIconView"
            android:text="Liquid Protein"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/listItemPriceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/listItemNameView"
            android:layout_below="@+id/listItemNameView"
            android:text="Rs.200"
            android:textColor="@android:color/black"
            android:textSize="18dp"/>

        <ImageView
            android:id="@+id/listTrashIconView"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/listItemNameView"
            android:background="@drawable/trash_icon"/>

        <View
            android:id="@+id/listTrashClickArea"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/listItemNameView"/>

        <LinearLayout
            android:id="@+id/listQuantityLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/listItemNameView"
            android:layout_below="@+id/listItemPriceView"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textColor="#88000000"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/listQuantityEditor"
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:background="@drawable/bottom_border_editor_bg"
                android:gravity="center"
                android:text="4"
                android:textColor="@android:color/black"
                android:textSize="20dp"/>

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>