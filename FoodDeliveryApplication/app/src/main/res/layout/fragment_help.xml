<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DDFFFFFF"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:background="@android:color/white"
        android:padding="30px">

        <TextView
            android:id="@+id/contactUsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTACT US"
            android:textColor="#88000000"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/secondTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contactUsTextView"
            android:layout_marginTop="50px"
            android:text="Have a question, feedback or complaint? Our team will be happy to support you as soon as possible."
            android:textColor="@android:color/black"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/emailUsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/secondTextView"
            android:layout_marginTop="50px"
            android:text="EMAIL US"
            android:textColor="@color/green_color_in_app"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/callUsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/secondTextView"
            android:layout_toRightOf="@+id/emailUsTextView"
            android:layout_marginTop="50px"
            android:layout_marginLeft="50px"
            android:text="CALL US"
            android:textColor="@color/green_color_in_app"
            android:textSize="18dp"
            android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>