<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/gridItemLayout"
        android:layout_width="355px"
        android:layout_height="600px"
        android:background="#FFFFFF"
        android:padding="30px">

        <ImageView
            android:id="@+id/gridItemIconView"
            android:layout_width="200px"
            android:layout_height="250px"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_red_dark"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/gridItemNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridItemIconView"
            android:layout_marginTop="50px"
            android:text="Liquid Protein"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/gridItemPriceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridItemNameView"
            android:text="Rs.200"
            android:textColor="@android:color/black"
            android:textSize="18dp"/>

        <RatingBar
            android:id="@+id/gridItemRatingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridItemPriceView"
            android:layout_marginTop="10px"
            android:rating="4"
            android:theme="@style/RatingBar"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/listItemLayout"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:background="#FFFFFF"
        android:padding="30px"
        android:visibility="gone">

        <ImageView
            android:id="@+id/listItemIconView"
            android:layout_width="200px"
            android:layout_height="300px"
            android:background="@android:color/holo_red_dark"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/listItemNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginTop="10px"
            android:layout_toRightOf="@+id/listItemIconView"
            android:text="Liquid Protein"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/listItemPriceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/listItemNameView"
            android:layout_below="@+id/listItemNameView"
            android:text="Rs.200"
            android:textColor="@android:color/black"
            android:textSize="18dp"/>

        <RatingBar
            android:id="@+id/listItemRatingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/listItemNameView"
            android:layout_below="@+id/listItemPriceView"
            android:layout_marginTop="10px"
            android:rating="4"
            android:theme="@style/RatingBar"
            />

    </RelativeLayout>


</RelativeLayout>