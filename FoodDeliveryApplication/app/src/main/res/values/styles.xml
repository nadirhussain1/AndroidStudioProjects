<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_color_in_app</item>
        <item name="colorPrimaryDark">@color/dark_green_color_in_app</item>
        <item name="colorAccent">@color/green_color_in_app</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/green_color_in_app</item>
        <item name="colorPrimaryDark">@color/dark_green_color_in_app</item>
        <item name="colorAccent">@color/green_color_in_app</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/ratingBarNormalColor</item>
        <item name="colorControlActivated">@color/ratingBarActiveColor</item>
    </style>


</resources>
