<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/scalingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#415669">

        <RelativeLayout
            android:id="@+id/headLayout"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:background="#74AEA3">

            <ImageView
                android:id="@+id/appIconView"
                android:layout_width="96px"
                android:layout_height="96px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80px"
                android:background="@drawable/olympus_icon"

                />

            <TextView
                android:id="@+id/appHeadingView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="20px"
                android:layout_toRightOf="@+id/appIconView"
                android:text="@string/heading_text"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/secondHeadTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/appHeadingView"
                android:layout_below="@+id/appHeadingView"
                android:layout_marginTop="10px"
                android:text="@string/secondary_heading_text"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/themeImageView"
            android:layout_width="1080px"
            android:layout_height="651px"
            android:layout_below="@+id/headLayout"
            android:layout_marginTop="300px"
            android:layout_centerHorizontal="true"
            android:background="@drawable/wear_theme_screen" />

        <RelativeLayout
            android:id="@+id/tipsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/themeImageView"
            android:layout_marginTop="100px">

            <TextView
                android:id="@+id/TipeFirstLineTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Tips: Install Olympus View SMS first "
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/TipeSecondLineTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/TipeFirstLineTextView"
                android:layout_below="@+id/TipeFirstLineTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="120px"
                android:layout_marginTop="10px"
                android:text="And apply this wear theme"
                android:textColor="#000000"
                android:textSize="16dp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/buttonsLayout"
            android:layout_marginBottom="30px"
            android:background="#AAAAAA" />

        <RelativeLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100px"
           >

            <Button
                android:id="@+id/downloadApplyButton"
                android:layout_width="700px"
                android:layout_height="150px"
                android:layout_centerInParent="true"
                android:background="#74AEA3"
                android:text="@string/download_app_text"
                android:textColor="#FFFFFF" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
