<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context=".MainActivity" tools:deviceIds="wear_square">

    <View
        android:id="@+id/squareThemeBackground"
        android:layout_width="280px"
        android:layout_height="280px"
        android:background="@drawable/square_ic22_bg"
        />

    <TextView
        android:id="@+id/senderNameTextView"
        android:layout_width="230px"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140px"
        android:text="Square"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/messageContentTextView"
        android:layout_width="230px"
        android:layout_height="100px"
        android:layout_below="@+id/senderNameTextView"
        android:layout_centerHorizontal="true"
        android:text="message body"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />
</RelativeLayout>
