<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/title_bg" >

    <LinearLayout
        android:id="@+id/ln_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/menu_item"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_half_menu" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ic_launcher"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/white_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_addmore"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="Add More Themes"
        android:textColor="@color/gold_color"
        android:textSize="14sp"
        android:visibility="gone" />

	<ImageButton
	    android:id="@+id/btn_menu"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:background="@drawable/titlebar_button"
	    android:paddingLeft="5dp"
	    android:src="@drawable/btn_menu"
	    android:visibility="gone" />

</LinearLayout><!-- From: file:/Users/nadirhussain/git/Olympus%20View%20Messaging/customAlertBox/src/main/res/layout/title_bar.xml -->