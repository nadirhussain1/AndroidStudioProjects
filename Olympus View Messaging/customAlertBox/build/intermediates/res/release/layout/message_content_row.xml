<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/receivedLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/recTextContentView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/light_blue_small"
            android:gravity="center"
            android:maxWidth="230dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="Rest"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/recTimeStampView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/recTextContentView"
            android:layout_toRightOf="@+id/recTextContentView"
            android:text="11:26 AM"
            android:textColor="#AA000000"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sentMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sentTextContentView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/blue_small"
            android:gravity="center"
            android:maxWidth="230dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="Rest"
            android:textColor="#C3DF66"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sentTimeStampView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sentTextContentView"
            android:layout_toLeftOf="@+id/sentTextContentView"
            android:text="11:26 AM"
            android:textColor="#AA000000"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/nadirhussain/git/Olympus%20View%20Messaging/customAlertBox/src/main/res/layout/message_content_row.xml -->