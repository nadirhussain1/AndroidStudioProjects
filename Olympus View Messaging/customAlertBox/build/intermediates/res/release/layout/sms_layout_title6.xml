<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/ln_h1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@drawable/ic28_title_bg" >

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/avartar" />

        <RelativeLayout
            android:id="@+id/centerLayout"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_alignLeft="@+id/img_avatar"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="27dp" >

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Mr. Luong"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#3BA4ED"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_number"
                android:layout_marginTop="-2dp"
                android:text="+48697513982"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#333333"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="-2dp"
                android:text="7:00 AM"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#333333"
                android:textSize="10sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/nadirhussain/git/Olympus%20View%20Messaging/customAlertBox/src/main/res/layout/sms_layout_title6.xml -->