<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AA000000"
    android:clickable="true"
    android:onClick="OnClickExit" >

    <LinearLayout
        android:id="@+id/ln_content"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/ic3_bg"
        android:clickable="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:scaleType="center"
            android:src="@drawable/ic_setting" />

        <ImageView
            android:id="@+id/img_s1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:scaleType="center"
            android:src="@drawable/ic3_s1" />

        <com.fortysevendeg.swipelistview.SwipeListView
            android:id="@+id/listView1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:cacheColorHint="@android:color/transparent"
            android:divider="#F1F1F1"
            android:dividerHeight="0.5dp"
            android:scrollingCache="false"
            swipe:swipeBackView="@+id/back"
            swipe:swipeCloseAllItemsWhenMoveList="true"
            swipe:swipeFrontView="@+id/front"
            swipe:swipeMode="both" />
    </LinearLayout>

</FrameLayout><!-- From: file:/Users/nadirhussain/git/Olympus%20View%20Messaging/customAlertBox/src/main/res/layout/sms_separate_contacts.xml -->