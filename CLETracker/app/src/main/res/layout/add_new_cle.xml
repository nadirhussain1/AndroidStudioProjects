<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backIconView"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="50px"
        android:background="@drawable/back_arrow_icon"/>

    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="950px"
        android:layout_height="match_parent"
        android:layout_below="@+id/backIconView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px">

        <EditText
            android:id="@+id/titleEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Enter title of CLE"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:textColor="@android:color/black"
            android:textColorHint="#AA000000"
            android:textSize="25dp"
            />

        <TextView
            android:id="@+id/dateStaticTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleEditor"
            android:layout_marginTop="50px"
            android:text="Date:"
            android:textColor="#AA000000"
            android:textSize="22dp"/>

        <TextView
            android:id="@+id/dateValueTextView"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_below="@+id/dateStaticTextView"
            android:layout_marginTop="10px"
            android:background="@drawable/standard_buttons_rounded_bg"
            android:gravity="center"
            android:text="Set date of CLE"
            android:textColor="@android:color/white"
            android:textSize="22dp"/>

        <TextView
            android:id="@+id/categoryStaticView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateValueTextView"
            android:layout_marginTop="50px"
            android:text="Category:"
            android:textColor="#AA000000"
            android:textSize="22dp"/>

        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categoryStaticView"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/categoryStaticView"
            ></Spinner>

        <TextView
            android:id="@+id/creditsStaticView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categorySpinner"
            android:layout_marginTop="50px"
            android:text="Credits:"
            android:textColor="#AA000000"
            android:textSize="22dp"/>

        <EditText
            android:id="@+id/creditsEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categorySpinner"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@+id/creditsStaticView"
            android:gravity="center"
            android:hint="Enter credits"
            android:inputType="number"
            android:maxLines="1"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:textColor="@android:color/black"
            android:textColorHint="#AA000000"
            android:textSize="25dp"
            />

        <LinearLayout
            android:id="@+id/checkboxLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_below="@+id/creditsEditor"
            android:layout_marginTop="50px"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/selfStaticTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Self Study?"
                android:textColor="#AA000000"
                android:textSize="22dp"
                />
            <CheckBox
                android:id="@+id/selfStudyCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                />


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/certificateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkboxLayout"
            android:layout_marginTop="150px"
            >

            <ImageView
                android:id="@+id/certificateImageView"
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:layout_centerHorizontal="true"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/addCertificateTextView"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:background="@drawable/standard_buttons_rounded_bg"
                android:gravity="center"
                android:text="Upload certificate"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"
                android:textSize="22dp"/>


        </RelativeLayout>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="950px"
            android:layout_height="140px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30px"
            android:background="@drawable/standard_buttons_rounded_bg"
            android:text="Save"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:textAllCaps="false"
            />


    </RelativeLayout>


</RelativeLayout>