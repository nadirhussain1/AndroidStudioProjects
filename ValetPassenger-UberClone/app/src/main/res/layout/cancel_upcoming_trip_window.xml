<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#44000000">

    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="550px"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:padding="50px">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel Scheduled Ride?"
            android:textColor="@android:color/black"
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="60px"
            android:text="Cancelling your schedulled ride will remove it from your upcoming trips."
            android:textSize="18dp"
            />

        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/msg"
            android:layout_marginTop="60px"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/neverMindButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/white_rounded_corner_bg"
                android:gravity="center"
                android:text="NEVERMIND"
                android:textColor="@android:color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                />

            <View
                android:layout_width="20px"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/cancelRideButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@android:color/black"
                android:gravity="center"
                android:text="CANCEL RIDE"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100px"
            android:visibility="gone"
            />

    </RelativeLayout>


</RelativeLayout>